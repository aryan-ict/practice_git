<odoo>
    <data>


        <record model="ir.ui.view" id="student_form">
            <field name="name">student_form form</field>
            <field name="model">student.form</field>
            <field name="arch" type="xml">
                <form>

                    <field name="phone_no"/>
                    <field name="email_id"/>

                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="student_form_action_window">
            <field name="name">student_form window</field>
            <field name="res_model">student.form</field>
            <field name="view_mode">form</field>
        </record>
    </data>

</odoo>